{
    "manifest_version": 3,
    "name": "Spin Wheel Plugin",
    "version": "1.0",
    "description": "Adds a spin-to-win wheel on web pages.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["index.html", "script.js", "style.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  